<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    
    <RelativeLayout 
        android:id="@+id/content_view"
        android:background="@color/background_lightgray_alpha"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:tag="bottom"
        android:layout_weight="1"
    >

        <GridView
            android:id="@+id/apps_view"
            android:cacheColorHint="#fff"
            android:fastScrollEnabled="false"
            android:layout_marginTop="0dip"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:horizontalSpacing="1dp"
            android:numColumns="3"
            android:scrollingCache="false"
            android:scrollbars="vertical"
            android:scrollbarDefaultDelayBeforeFade="5000"
            android:stretchMode="columnWidth"            
            android:verticalSpacing="1dip"
        />
        
        <TextView
            android:id="@+id/status_label"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" 
            android:layout_width="wrap_content"
            android:padding="10dip"
            android:text="@string/main_view_signed_out_label"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold"
        />        
            
        <ImageView
	        android:contentDescription="@string/accessibility_style_view"
            android:layout_height="4dip"
            android:layout_width="fill_parent" 
            android:scaleType="fitXY"
            android:src="@drawable/shadow_top"
        />
        
    </RelativeLayout>
    
</LinearLayout>
